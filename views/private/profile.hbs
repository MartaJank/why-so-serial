<div class="wrapper">
    <div class="main">
        <article class="profile-main">
            <div class="user-pic-div">
                <img src="{{user.image}}" alt="user image" class="user-picture">
            </div>
            <p><b class="bold-item">Name:</b> {{user.name}}</p>
            <a href="/private/profile/{{user._id}}/edit"><button class="btn btn-after">Edit</button></a>
        </article>
        <article class="profile-main">
        {{#if user.faveKillers}}
            <a href="/private/fav-killers/{{user._id}}"><button class="btn btn-after">Favorite Killers</button></a>
        {{/if}}
        {{#if user.killersCreated}}
            <h2>My Killers:</h2>
            {{#each user.killersCreated}}
                <a href="/killers/{{this._id}}">
                    <img src="{{this.image}}" alt="">
                    <p>{{this.name}} {{this.lastName}}</p>
                </a>
            {{/each}}
        {{/if}}
        </article>
    </div>
</div>

